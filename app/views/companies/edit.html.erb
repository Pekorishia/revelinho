<div class="container-fluid">
 <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "erro", "erros") %> encontrados:</h2>

      <ul>
        <% @company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-6">
      <h1>Cadastro da Empresa</h1>
      <%=flash[:notice] %>
      <%= form_for @company do |f| %>
      <div class="form-group">
        <%= f.label :name, "Nome" %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Email da empresa" %>
      </div>
      <div class="form-group">
        <%= f.label :address, "Endereço" %>:
        <%= f.text_field :address, class: 'form-control', placeholder: 'Endereço da empresa' %>
      </div>
        <%= f.submit 'Salvar', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
