<div class="container-fluid candidate-page p-0">
  <div class="container-fluid candidate-header">
    <div class="row name-wrapper">
      <h1 class="name"><%= @company.name %></h1>
    </div>
    <div class="row address-wrapper">
      <h4 class="address">Endereço: <%= @company.address %></h4>
    </div>
    <% if @company.pending? %>
      <div class="container mt-5">
        <div class="row justify-content-center">
            <%= link_to 'Completar perfil da empresa', edit_company_profile_path(@company.company_profile), class: 'btn btn-outline-dark' %>
        </div>
      </div>
    <% else %>
      <div class="image-wrapper">
        <%= image_tag @company.company_profile.logo %>
      </div>      
    <% end %>
  </div>

  <% unless @company.pending? %>
    <div class="candidate p-2">
      <div class="container-fluid">
        <div class="row justify-content-center text-wrapper">
          <div class="col-md-3 col-lg-3 col-xl-3 col-sm-12 header">Descrição da empresa</div>
          <div class="spacer"></div>
          <div class="col-md-3 col-lg-3 col-xl-3 col-sm-12 content"><%= @company.company_profile.full_description %></div>
        </div>
        <div class="row justify-content-center text-wrapper">
          <div class="col-md-3 col-lg-3 col-xl-3 col-sm-12 header">Benefícios</div>
          <div class="spacer"></div>
          <div class="col-md-3 col-lg-3 col-xl-3 col-sm-12 content"><%= @company.company_profile.benefits %></div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="container mt-5">
    <div class="row justify-content-center">
        <%= link_to 'Voltar', root_path, class: 'btn btn-outline-info' %>
    </div>
  </div>
</div>