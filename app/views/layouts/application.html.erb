<!DOCTYPE html>
<html>
  <head>
    <title>Revelinho</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary py-3">
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav font-weight-bold">
          <% if candidate_signed_in? %>
            <li class="nav-item">
              <%= link_to "Sair", destroy_candidate_session_path, method: :delete, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <a class="nav-link" href="<%=new_candidate_registration_path%>">Registre-se</a>
            </li>
          <% end %>
        </ul>
    </nav>
    <% if notice.present? %>
      <div class="alert alert-primary" role="alert">
        <%= notice %>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="alert alert-danger" role="alert">
        <%= alert %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
