<!DOCTYPE html>
<html>
  <head>
    <title>Revelinho</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class='navbar navbar-expand-lg navbar-light bg-light py-3'>
      <%= link_to image_tag('revelinho.svg', size: '250x50'), root_path %>
      <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="conteudoNavbarSuportado" aria-expanded="false" aria-label="Alterna navegação">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <% if current_user.present? %>
            <div>
              <%= current_user.logout_link %>
            </div>
          <% else %> 
          <li class='nav-item'>
            <%= link_to 'Login de funcionário', new_employee_session_path, class: 'nav-link p-3' %>
          </li>
          <li class='nav-item'>
            <%= link_to 'Login de candidato', new_candidate_session_path, class: 'nav-link p-3' %>
          </li>
          <% end %>
        </ul>
      </div>
    </nav>
    
    <hr class="mt-0">
    
    <% if notice.present? %>
    <div class='alert alert-primary' role='alert'>
      <%= notice %>
    </div>
    <% end %>
    
    <% if alert.present? %>
    <div class='alert alert-danger' role='alert'>
      <%= alert %>
    </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
