<!DOCTYPE html>
<html>
  <head>
    <title>Revelinho</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class='navbar navbar-expand-lg navbar-light bg-light py-3 border-bottom'>
      <%= link_to image_tag('revelinho.svg', size: '250x50'), root_path %>
      <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="conteudoNavbarSuportado" aria-expanded="false" aria-label="Alterna navegação">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <% dp_down = 'Login/Cadastro'
            dp_down = current_candidate.name if candidate_signed_in?
             dp_down = current_employee.name if employee_signed_in? %>
          <li class="nav-item dropdown">
              <%= link_to dp_down, '#', id: "login", role: "button",
                    "data-toggle": "dropdown", "aria-haspopup": "true",
                    "aria-expanded": "false",
                  class: 'nav-link dropdown-toggle p-3' %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="login">
                <% if candidate_signed_in? %>
                  <% if current_candidate.candidate_profile %>
                  <%= link_to 'Editar Perfil',
                              edit_candidate_profile_path(current_candidate.candidate_profile),
                      class: 'dropdown-item' %>                    
                  <% end %>
                  <div class="dropdown-divider"></div>
                  <%= link_to 'Logout', destroy_candidate_session_path, method: :delete, class: 'dropdown-item' %>
                <% elsif employee_signed_in? %>
                  <%= link_to 'Editar Perfil', '#', class: 'dropdown-item' %>
                  <%= link_to 'Logout', destroy_employee_session_path, method: :delete, class: 'dropdown-item' %>
                <% else %>

                <%= link_to 'Candidato', new_candidate_session_path, class: 'dropdown-item' %>
                <%= link_to 'Empresa', new_employee_session_path, class: 'dropdown-item' %>
                <% end %>
              </div>
          </li>
        </ul>
      </div>
    </nav>

    <%= @application_presenter.flash_alerts %>

    <div class="mb-4">
      <%= yield %>
    </div>

    <section id="footer">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 mt-2 mt-sm-5">
            <ul class="list-unstyled list-inline social text-center">
              <li class="list-inline-item"><a href="https://www.instagram.com/p/B4QjAoilFbx/" target="_blank"><i class="fa fa-facebook"></i></a></li>
              <li class="list-inline-item"><a href="https://www.instagram.com/p/B4QjAoilFbx/" target="_blank"><i class="fa fa-twitter"></i></a></li>
              <li class="list-inline-item"><a href="https://www.instagram.com/p/B4QjAoilFbx/" target="_blank"><i class="fa fa-instagram"></i></a></li>
              <li class="list-inline-item"><a href="https://www.instagram.com/p/B4QjAoilFbx/" target="_blank"><i class="fa fa-envelope"></i></a></li>
            </ul>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 mt-2 mt-sm-2 text-center text-white">
            <p class="h6">&copy Revelinho - 2019 </p>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
