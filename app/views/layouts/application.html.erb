<!DOCTYPE html>
<html>
  <head>
    <title>Revelinho</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class='navbar navbar-expand-lg py-3'>
      <div class="mb-auto">
      <%= link_to image_tag('revelinho.svg', size: '250x50'), root_path %>
      </div>
      <div id='navbarNav'>
        <ul class='navbar-nav font-weight-bold ml-auto flex-row'>
          <% if candidate_signed_in? %>
            <li class='nav-item'>
              <%= link_to 'Logout', destroy_candidate_session_path, method: :delete, class: 'btn btn-secondary' %>
            </li>
          <% elsif employee_signed_in? %>
            <li class='nav-item'>
              <%= link_to 'Logout', destroy_employee_session_path, method: :delete, class: 'btn btn-secondary' %>
            </li>
          <% else %>
            <li>
              <%= link_to 'Login de funcionÃ¡rio', new_employee_session_path, class: 'btn btn-dark mx-2' %>
            </li>
            <li>
              <%= link_to 'Login de candidato', new_candidate_session_path, class: 'btn btn-dark mx-2' %>
            </li>
          <% end %>
        </ul>
    </nav>
    <hr class="mt-0">
    <% if notice.present? %>
      <div class='alert alert-primary' role='alert'>
        <%= notice %>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class='alert alert-danger' role='alert'>
        <%= alert %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
