<div class="col-12 bg-white">
  <div class="col-12 col-md-10 offset-md-1 mb-3 pt-3 pb-3">
    <div class="row">
      <div class="col-12 col-md-6 main-description flex">
        <%= @selection_process.decorate.main_contact %>

        <% if employee_signed_in? && @selection_process.offers.pending.empty?  %>
          <%= link_to 'Quero contrata-lo!', new_candidate_offer_path(@selection_process.candidate.id, @selection_process.id),
          class: 'btn btn-info align-middle ml-3' %>
        <% end %>
      </div>
      <div class="col-12 col-md-6 text-md-right">
        <div class="float-md-right position-description">
          <h5><%= @selection_process.position.title %></h5>
          <%= @selection_process.decorate.p_print_hiring_scheme  %>
          <%= @selection_process.decorate.p_print_office_hours %>
          <%= @selection_process.decorate.p_print_salary %>
        </div>
      </div>
    </div>
  </div>
</div>