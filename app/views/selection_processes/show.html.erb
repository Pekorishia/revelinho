<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-8 offset-md-2">
      <h1><%= @selection_process.company.name %></h1>
      <%= form_with(url: send_message_candidates_path(@selection_process), method: 'post') do |f| %>
        <div class="form-group">
          <%= f.text_area :text, class: 'form-control', rows: "4", placeholder: 'Escreva a sua mensagem' %>
        </div>      
        <%= f.submit 'Enviar', class: 'btn btn-primary' %>
      <% end %>
    </div>
    <div class="jumbotron col-12">
      <div class="row">
        <% @selection_process.messages.each do |message| %>
          <div class="col-12 mb-3">
            <div class="card card-body">
              <h4><%= message.sendable.email %></h4>
              <p><%= message.text %></p>
            </div>
          </div>          
        <% end %>
      </div>
    </div>
  </div>
</div>
