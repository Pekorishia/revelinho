<div class="invite-card">
  <section class="invites-header mt-3">
    <%= image_tag invite.company.company_profile.logo %>
    <div class="invite-card-infos">
      <h2><%= invite.company.name %></h2>
      <%= link_to 'Saiba mais', invite.company %>
    </div>
  </section>
  <section class="invites-info rounded px-4 py-3">
  <div class="row">
    <div class="col-md-9">
    <h2><%=invite.position.title%></h2>
    <p class="mb-0"><span>Data do convite:</span> <%= l(invite.created_at.to_date, format: :long) %></p>
    <p class="mb-0"><span>Faixa salarial:</span> <%= number_to_currency invite.position.salary_from %>-<%= number_to_currency invite.position.salary_to %> </p>
    <p class="mb-0"><span>Área de atuação:</span> <%=invite.position.industry %></p>
    <p class="mb-0"><span>Descrição do cargo:</span> <%=invite.position.description%></p>
    <p class="mb-0"><span>Regime de Contratação:</span> <%= t(:"position_type.#{invite.position.position_type}") %></p>
    <p class="mb-0"><span>Mensagem do recrutador:</span> <%=invite.message%></p>
    </div>
    <div class="col-md-3 justify-content-center align-self-center">
      <%= @invite_presenter.invite_accepted(invite) %>
      <%= @invite_presenter.invite_rejected(invite) %>
      <%= invite.invite_links %>      
    </div>
  </section>
</div>
