<div class="row">
  <div class="col-2 image-section">
    <% if candidate.candidate_profile.avatar.attached? %>
      <%= image_tag candidate.candidate_profile.avatar, class: 'image img-thumbnail', style: "border-radius: 0" %>
    <% else %>
      <%= image_tag 'placeholder.png', class:"image", alt: candidate.name %>
    <% end %>
  </div>
  <div class="col-10 content">
    <h4><%= candidate.name %></h4>
    <p class="font-weight-bold text"><%= candidate.occupation %></p>
    <div class="row">
      <div class="col">
        <p class="heading"><%= t('activerecord.attributes.candidate.city') %></p>
        <p class="text"><%= candidate.city %></p>
      </div>
      <div class="col">
        <p class="heading"><%= t('activerecord.attributes.candidate.country') %></p>
        <p class="text"><%= candidate.country %></p>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p class="heading"><%= t('activerecord.attributes.candidate_profile.english_proficiency') %></p>
        <p class="text"><%= candidate.candidate_profile.english_proficiency %></p>
      </div>
    </div>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-12">
    <p class="lead">Contato</p>
  </div>
  <div class="col-12">
    <p class="heading"><%= t('activerecord.attributes.candidate.email') %></p>
    <p class="text"><%= candidate.email %></p>
  </div>
  <div class="col">
    <p class="heading"><%= t('activerecord.attributes.candidate_profile.skype_username') %></p>
    <p class="text"><%= candidate.candidate_profile.skype_username %></p>
  </div>
  <div class="col">
    <p class="heading"><%= t('activerecord.attributes.candidate_profile.linkedin_profile_url') %></p>
    <p class="text"><%= candidate.candidate_profile.linkedin_profile_url %></p>
  </div>
  <div class="col">
    <p class="heading"><%= t('activerecord.attributes.candidate_profile.github_profile_url') %></p>
    <p class="text"><%= candidate.candidate_profile.github_profile_url %></p>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-12">
    <p class="lead">Informações profissionais</p>
  </div>
  <div class="col">
    <p class="heading"><%= t('activerecord.attributes.candidate_profile.coding_languages') %></p>
    <p class="text"><%= candidate.candidate_profile.coding_languages %></p>
  </div>
  <div class="col">
    <p class="heading"><%= t('activerecord.attributes.candidate_profile.skills') %></p>
