<h2>Registrar</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>
  <div class='form-group'>
    <%= f.label :name, 'Nome'%><br />
    <%= f.text_field :name, placeholder: 'Nome' %>
  </div>

  <div class='form-group'>
    <%= f.label :birthday, 'Data de Nascimento'%><br />
    <%= f.date_field :birthday, placeholder: 'Data de Nascimento' %>
  </div>

  <div class='form-group'>
    <%= f.label :cpf, 'Cpf'%><br />
    <%= f.text_field :cpf, placeholder: 'cpf' %>
  </div>

  <div class='form-group'>
    <%= f.label :address, 'Endereço'%><br />
    <%= f.text_field :address, placeholder: 'endereço' %>
  </div>

  <div class='form-group'>
    <%= f.label :phone, 'Telefone'%><br />
    <%= f.telephone_field :phone, placeholder: 'telefone' %>
  </div>

  <div class='form-group'>
    <%= f.label :occupation, 'Profissão'%><br />
    <%= f.text_field :occupation, placeholder: 'Profissão' %>
  </div>

  <div class='form-group'>
    <%= f.label :educational_level, 'Nível de Escolaridade'%><br />
    <%= f.text_field :educational_level, placeholder: 'Nível de Escolaridade' %>
  </div>

  <div class='field'>
    <%= f.label :email, 'Email'%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: 'email' %>
  </div>

  <div class='field'>
    <%= f.label :password, 'Senha'%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: 'new-password' %>
  </div>

  <div class='field'>
    <%= f.label :password_confirmation, 'Confirmar Senha'%><br />
    <%= f.password_field :password_confirmation, autocomplete: 'new-password' %>
  </div>

  <div class='actions'>
    <%= f.submit 'Registrar' %>
  </div>
<% end %>

<%= render 'candidates/shared/links' %>
