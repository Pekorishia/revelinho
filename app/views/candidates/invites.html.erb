<div class="container">
<% @invites.each do |invite| %>
  <div class="invite-card">
    <section class="invites-header mt-3">
    <%= image_tag "/assets/revelinho-0e4ecdb56b2262ed8f8add5dac661e472a9b7973e132d59dd6fed4e5541438ca.svg" %>
    <div class="invite-card-infos">
      <h2><%= invite.position.company.name %></h2>
      <%= link_to 'Saiba mais', invite.position.company %>
    </div>
    </section>
    <section class="invites-info rounded px-4 py-3">
    <div class="row">
      <div class="col-md-9">
      <h2><%=invite.position.title%></h2>
      <p><span>Data do convite:</span> <%= I18n.localize(invite.created_at, format: '%d de %B de %Y') %></p>
      <p><span>Faixa salarial:</span> <%= number_to_currency invite.position.salary %></p>
      <p><span>Área de atuação:</span> <%=invite.position.industry %></p>
      <p><span>Descrição do cargo:</span> <%=invite.position.description%></p>
      <p><span>Regime de Contratação:</span> <%= I18n.t(:"position_type.#{invite.position.position_type}") %></p>
      </div>
      <div class="col-md-3 d-flex align-items-end flex-wrap align-content-end">
      <%= link_to 'Rejeitar', reject_invites_candidate_path(invite), method: :post, class: 'btn btn-danger flex-grow-1 m-3' %>
      <%= link_to 'Aceitar convite', accept_invites_candidate_path(invite), method: :post, class: 'btn btn-success flex-grow-1 m-3' %>
      </div>
    </div>
    </section>
  </div>
<% end %>
</div>
