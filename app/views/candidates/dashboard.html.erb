<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron">
        <h2>
          <%= "Olá #{current_candidate.name}!" %>
        </h2>
        <% if current_candidate.published? %>
          <p>
            Seu perfil está ativo. Aguarde o contato das empresas interessadas.
          </p>
          <%= link_to 'Editar Perfil', edit_candidate_profile_path(current_candidate.candidate_profile), class: "btn btn-primary btn-large" %>
        <% else %>
          <p>
            Seu perfil ainda não está ativo. Complete seu perfil e fique visível para as empresas.
          </p>
          <%= link_to 'Concluir perfil', new_candidate_profile_path, class: "btn btn-primary btn-large" %>
        <% end %>
      </div>
    </div>
  </div>

  <% if current_candidate.published? %>
    <div class="container">
      <div class="row">
          <div class="col-md-4 col-xl-4">
            <%= link_to invites_candidates_path, class: 'card bg-c-green order-card card-common link-defaut-color' do %>              
                  <div class="card-block">
                      <h4 class="m-b-20">Convites</h4>
                      <h2 class="text-right"><i class="fas fa-envelope-open-text mr-2"></i><span><%= current_candidate.invites.count %></span></h2>
                  </div>
              <% end %>
          </div>
          
          <div class="col-md-4 col-xl-4">
              <div class="card bg-c-green order-card card-common">
                  <div class="card-block">
                      <h4 class="m-b-20">Processos Seletivos</h4>
                      <h2 class="text-right"><i class="fas fa-edit  mr-1"></i><span>486</span></h2>
                  </div>
              </div>
          </div>
          
          <div class="col-md-4 col-xl-4">
              <div class="card bg-c-yellow order-card card-common">
                  <div class="card-block">
                      <h4 class="m-b-20">Propostas</h4>
                      <h2 class="text-right"><i class="fas fa-hands-helping  mr-1"></i><span>486</span></h2>
                  </div>
              </div>
          </div>
    </div>
  </div>
  <% end %>
</div>
