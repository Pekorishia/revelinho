<div class="col-12 col-md-8 offset-md-2 mt-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="card card-body bg-light">
    <h2 class="text-center mb-4">Empresa</h2>

    <h5>Funcion√°rio</h5>
    <hr class="mt-0">

    <div class='form-group'>
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' , placeholder: 'Escreva seu nome'%>
    </div>

    <div class='form-group'>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' , placeholder: 'Entre seu email'%>
    </div>

    <div class="row">
      <div class="col-12 col-md-6">
        <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Digite uma senha' %>
            <% if @minimum_password_length %>
            <em>(<%= I18n.t("employee.passwords.characters_minimum", count: @minimum_password_length) %>)</em>
            <% end %><br />
          </div>
      </div>

      <div class="col-12 col-md-6">
        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Confirme a senha' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :avatar, 'Adicione uma foto ao seu perfil' %>
      <%= f.file_field :avatar, accept: 'image/png,image/gif,image/jpeg', class: 'form-control-file' %>
    </div>

    <div class="actions form-group text-center">
      <%= f.submit I18n.t("employee.shared.links.sign_up"), class: 'btn btn-primary btn-revelo-dark btn-lg btn-block' %>
      <%= render "employees/shared/links" %>
    </div>
  </div>
  <% end %>
</div>
