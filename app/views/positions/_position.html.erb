<div id="<%= "position-#{position.id}" %>" class="position card card-body">
  <p>
    <span class="lead">
      <%= position.title %>
    </span>
    <span class="text-secondary">
      - <%= l(position.created_at, format: :date_abbr) %>
    </span>
  </p>
  <a data-toggle="collapse" href="#details-<%= position.id %>" role="button" aria-expanded="false" aria-controls="details-<%= position.id %>">
    detalhes
  </a>

  <div class="collapse details" id="details-<%= position.id %>">
    <div class="card card-body mb-0">
      <p class="my-0 px-2"><%= position.description %></p>
      <p class="my-0 px-2"><%= position.industry %></p>
      <p class="my-0 px-2"><%= position.salary %></p>
    </div>
  </div>
</div>