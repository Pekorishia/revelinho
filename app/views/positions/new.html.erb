<div class="container">
  <div class="row">
    <div class="col-md-12">
    <h1 class="text-center">Cadastre a vaga desejada:</h1>
    <%= form_with model: @position, local: true do |f| %>
      <% if @position.errors.any? %>
        <div id="error_explanation">
          <h2><%= "#{@position.errors.count} erro".pluralize(@position.errors.count) %> impediram que essa posição fosse salvada:</h2>

          <ul>
            <% @position.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.label :title, 'Título' %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :industry, 'Área' %>
      <%= f.text_field :industry, class: "form-control" %>
      
      <%= f.label :description, 'Descrição' %>
      <%= f.text_area :description, class: "form-control" %>
      <%= f.submit 'Enviar', class: "mt-2 form-control btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>
