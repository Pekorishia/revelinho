<%= form_with(model: candidate_profile, local: true) do |form| %>
  <%= render partial: 'shared/form_error', locals: { object: candidate_profile }  %>

  <div class="form-group">
    <%= form.label :avatar %>
    <%= form.file_field :avatar, accept: 'image/png,image/gif,image/jpeg', class: 'form-control-file' %>
  </div>

  <div class="form-group">
    <%= form.label :work_experience %>
    <%= form.text_area :work_experience, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :education %>
    <%= form.text_area :education, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :skills %>
    <%= form.text_area :skills, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :coding_languages %>
    <%= form.text_area :coding_languages, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :english_proficiency %>
    <%= form.text_field :english_proficiency, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :skype_username %>
    <%= form.text_field :skype_username, class: 'form-control' %>
  </div>

    <div class="form-group">
    <%= form.label :linkedin_profile_url %>
    <%= form.text_field :linkedin_profile_url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :github_profile_url %>
    <%= form.text_field :github_profile_url, class: 'form-control' %>
  </div>

  <div class="actions float-right  mb-4">
    <%= form.submit 'Atualizar Perfil', class: 'btn btn-primary'%>
    <%= link_to 'Voltar', dashboard_candidates_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
